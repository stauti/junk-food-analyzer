<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fh_rosenheim.myapplication" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ZeitsteuerungActivity"
            android:label="@string/title_activity_zeitsteuerung"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fh_rosenheim.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".GeraetHinzufuegenActivity"
            android:label="@string/title_activity_geraet_hinzufuegen" >
        </activity>
        <activity
            android:name=".GeraetAendernActivity"
            android:label="@string/title_activity_geraet_aendern" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
